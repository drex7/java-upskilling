<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Multi browser test" verbose="1" parallel="tests" thread-count="3">
    <test name="Chrome execution">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.drex.ModalsTest"/>
        </classes>
    </test>

    <test name="Firefox execution">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.drex.CalendarsTest"/>
            <class name="com.drex.WindowOperationsTest"/>
        </classes>
    </test>

    <test name="Firefox execution 2">
        <parameter name="browser" value="firefox" />
        <packages>
            <package name="com.drex"/>
        </packages>
    </test>

    <test name="Regression Execution in Edge">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.drex.IFramesTest"/>
            <class name="com.drex.TablesTest"/>
            <class name="com.drex.FormFieldsTest"/>
        </classes>
    </test>
</suite>